type User {
  username: String! @id
  name: String!
  about: String
  email: String!
  avatarImageURL: String!
  posts: [Post!] @hasInverse(field: postedBy)
  following: [User] @hasInverse(field: followers)
  followers: [User] @hasInverse(field: following)
}

type Post {
  id: ID!
  postedBy: User!
  imageURL: String!
  description: String
  likes: Int!
  comments: [Comment!] @hasInverse(field: commentOn)
}

type Comment {
  id: ID!
  text: String!
  commentBy: User!
  commentOn: Post!
}
